{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    // "strict": true, //TODO: 后面改进
    // "esModuleInterop": true, //造成mongoose出问题的配置
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
      // "@/*": ["src/*"]
    },
    // "types": [
    //   "express",
    //   "inversify",
    //   "inversify-express-utils",
    //   "reflect-metadata"
    // ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"], // 需要编译的 ts 文件，这里设置为 src 目录下的所有文件
  "exclude": ["node_modules"] // 编译需要排除的文件目录
}
